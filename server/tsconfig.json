{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "@artwork/*": ["./src/artwork/*"],
            "@auction/*": ["./src/auction/*"],
            "@auctionHistory/*": ["./src/auctionHistory/*"],
            "@auth/*": ["./src/auth/*"],
            "@category/*": ["./src/category/*"],
            "@completedAuction/*": ["./src/completedAuction/*"],
            "@config/*": ["./src/config/*"],
            "@cronTask/*": ["./src/cronTask/*"],
            "@exhibition/*": ["./src/exhibition/*"],
            "@image/*": ["./src/image/*"],
            "@interestArtwork/*": ["./src/interestArtwork/*"],
            "@user/*": ["./src/user/*"],
            "@utils/*": ["./src/utils/*"],
        },
    }
}
